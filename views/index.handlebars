<h1>Eat-Da-Burger!</h1>

<img id="burger" src="/assets/img/burger.png" />

<div class="container">
    <div class="row d-flex justify-content-center">
        <div class="col-4">
            <input class="burgerInput" type="text" placeholder="Enter the burger in your mind...">
            <button type="button" class="btn btn-primary addBtn">Add</button>
        </div>
    </div>
    <br>
    {{#each burgers}}
        {{> burgers/burger-block }}
    {{/each}}
</div>