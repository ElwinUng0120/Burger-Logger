<div class="row">
    <div class="col-4">
        <div class="card">
            <div class="card-body newBurger">
                {{ burgerName }}
            </div>
        </div>
    </div>
    <div class="col-4 d-flex justify-content-center">
        <button type="button" class="btn btn-danger eatBtn" data-id="{{id}}" data-state="{{state}}" {{#if state}}disabled{{/if}}>
            {{#if state}}ATE{{else}}EAT IT{{/if}}
        </button>
    </div>
    <div class="col-4">
        <div class="card ateBurger">
            <div class="card-body" style="color: grey; background-color: black; display: {{#if this.state}}block{{else}}none{{/if}}">
                {{ burgerName }}
            </div>
        </div>
    </div>
</div>
<br>